<%- include ../partials/header.ejs%>


               <main class="container" >
         <div class="row">
         <div class="offset-md-1 col-md-10">
         <h1><%= title %></h1>

   
         <a href="/books/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Book </a>
       
        <br>
        <table class="table table-bordered table-striped table-hover">
        <!-- Header Row -->
        <tr class="d-flex">      
          
                        <th class="text-center col-2">Title</th> <!--v2-->
                        <th class="col-4">Description</th>  <!--v2-->
                        <th class="text-center col-1">Price</th> <!--v2-->
                        <th class="text-center col-2">Author</th> <!--not modif-->
                        <th class="text-center col-1">Genre</th> <!--v2-->
                        
        </tr>
                <!-- Repeat Template Row -->
                <% for(let count = 0; count < BookList.length; count++) { %>
                <tr class="d-flex">
                 <td class="text-center col-2"><%= BookList[count].title %></td> <!--v2-->
                 <td class="col-4"><%= BookList[count].description %></td> <!--v2-->
                 <td class="text-center col-1"><%= BookList[count].price %></td> <!--v2-->
                 <td class="text-center col-2"><%= BookList[count].author %></td> <!--not modif-->
                 <td class="text-center col-1"><%= BookList[count].genre %></td> <!--v2-->
                 <td class="text-center col-1"> 
                     <a href="/books/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Edit </a> 
                    </td>
                 <td class="text-center col-1"> 
                     <a href="/books/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete </a> 
                 </td>
                         
                </tr>
                <%  } %>
        </table>
          </div>
          </div>
        </main>
    



  
